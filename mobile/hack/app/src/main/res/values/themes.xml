<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/rzhd</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.Hack" parent="Base.Theme.Hack" />

    <style name="MainStyleText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minEms">17</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/back_for_button_red</item>
        <item name="android:textColor">@color/color_text_button</item>
    </style>

    <style name="TestButtonStyleText">
        <item name="android:textSize">15sp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/back_for_button</item>
        <item name="android:textColor">@color/color_text_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TestStyleText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLines">10</item>
        <item name="android:minLines">5</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/back_for_tw</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TimerStyleText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:minEms">17</item>
        <item name="android:paddingVertical">30dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/rzhd</item>
    </style>

    <style name="GameStyleText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minLines">12</item>
        <item name="android:maxLines">12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/back_for_message_game</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ResultStyleText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/rzhd</item>
    </style>
</resources>